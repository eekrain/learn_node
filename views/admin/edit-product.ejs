<%- include("./../includes/header.ejs") %>
<%- include("./../includes/navbar.ejs") %>

<main class="container mt-4">
  <div class="row d-flex justify-content-center">
    <div class="col-5">
      <form action="<%= editing ? '/admin/edit-product' : '/admin/add-product' %>" method="POST">

        <div class="mb-3">
          <label for="title" class="form-label">Judul</label>
          <input type="text" class="form-control" id="title" name="title" value="<%= editing ? product.title : '' %>" />
        </div>

        <div class="mb-3">
          <label for="imageUrl" class="form-label">Url Foto</label>
          <input type="text" class="form-control" id="imageUrl" name="imageUrl"
            value="<%= editing ? product.imageUrl : '' %>" />
        </div>

        <div class="mb-3">
          <label for="price" class="form-label">Harga</label>
          <input type="number" class="form-control" id="price" name="price"
            value="<%= editing ? product.price : '' %>" />
        </div>

        <div class="mb-3">
          <label for="description" class="form-label">Deskripsi</label>
          <textarea type="text" class="form-control" id="description" name="description"
            rows="5"><%= editing ? product.description : '' %></textarea>
        </div>

        <% if (editing) { %>
        <input type="hidden" name="productId" value="<%= product.id %>">
        <% } %>

        <div class="text-center">
          <button type="submit" class="btn btn-primary mt-3">
            <%= editing ? "Edit Product" : "Add Product" %>
          </button>
        </div>
      </form>
    </div>
  </div>
</main>

<%- include("./../includes/footer.ejs") %>